// -*- mode: c++ -*-
#ifndef BASIS_CONFIG_HPP
#define BASIS_CONFIG_HPP

// #define BASIS_SHELL_MAX @BASIS_SHELL_MAX@
// #if @BASIS_SHELL_SP@
// #define BASIS_SHELL_SP 1
// #endif

#define BASIS_SHELL_MAX 3
#define BASIS_SHELL_SP 1

#define BASIS_SHELL_SP_FUNCTIONS		\
    (000)(100)(010)(001)
#define BASIS_SHELL_S_FUNCTIONS			\
    (000)
#define BASIS_SHELL_P_FUNCTIONS			\
    (100)(010)(001)
#define BASIS_SHELL_D_FUNCTIONS			\
    (200)(020)(002)(110)(101)(011)
#define BASIS_SHELL_F_FUNCTIONS			\
    (300)(030)(003)				\
    (210)(201)(120)(021)(102)(012)(111)


#ifdef BASIS_SHELL_SP
#define BASIS_SHELL_TYPES_SP SP)(S)(P
#define BASIS_SHELL_ENUM_SP SP=-1,S,P
#define BASIS_SHELL_FUNCTIONS_SP		\
    BASIS_SHELL_SP_FUNCTIONS)			\
    (BASIS_SHELL_S_FUNCTIONS)			\
    (BASIS_SHELL_P_FUNCTIONS
#else //  BASIS_SHELL_SP
#define BASIS_SHELL_TYPES_SP S)(P
#define BASIS_SHELL_ENUM_SP S,P
#define BASIS_SHELL_FUNCTIONS_SP		\
    BASIS_SHELL_S_FUNCTIONS)			\
    (BASIS_SHELL_P_FUNCTIONS
#endif //  BASIS_SHELL_SP


#if BASIS_SHELL_MAX == 0
#define BASIS_SHELL_TYPES (S)
#define BASIS_SHELL_ENUM S
#define BASIS_SHELL_FUNCTIONS			\
    (BASIS_SHELL_0_FUNCTIONS)

#elif BASIS_SHELL_MAX == 1
#define BASIS_SHELL_TYPES (BASIS_SHELL_TYPES_SP)
#define BASIS_SHELL_ENUM BASIS_SHELL_ENUM_SP
#define BASIS_SHELL_FUNCTIONS                   \
    (BASIS_SHELL_FUNCTIONS_SP)

#elif BASIS_SHELL_MAX == 2
#define BASIS_SHELL_TYPES (BASIS_SHELL_TYPES_SP)(D)
#define BASIS_SHELL_ENUM BASIS_SHELL_ENUM_SP,D
#define BASIS_SHELL_FUNCTIONS                   \
    (BASIS_SHELL_FUNCTIONS_SP)			\
    (BASIS_SHELL_D_FUNCTIONS)

#elif BASIS_SHELL_MAX == 3
#define BASIS_SHELL_TYPES (BASIS_SHELL_TYPES_SP)(D)(F)
#define BASIS_SHELL_ENUM BASIS_SHELL_ENUM_SP,D,F
#define BASIS_SHELL_FUNCTIONS                   \
    (BASIS_SHELL_FUNCTIONS_SP)			\
    (BASIS_SHELL_D_FUNCTIONS)			\
    (BASIS_SHELL_F_FUNCTIONS)

#else
#error "invalid BASIS_SHELL_MAX=" BASIS_SHELL_MAX
#endif // BASIS_SHELL_MAX

#endif // BASIS_CONFIG_HPP
